# Mini Heart X Environment Configuration

# OpenAI API Key (Optional - for AI command translation)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (Optional - SQLite used by default)
DB_PASSWORD=your_secure_db_password

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Tool Configuration
ENABLE_REAL_EXECUTION=true
MAX_COMMAND_TIMEOUT=30
ENABLE_TERMINAL_MODE=true

# Network Settings
DEFAULT_NETWORK_RANGE=192.168.1.0/24
ENABLE_NETWORK_DISCOVERY=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./backend/logs/miniheartx.log